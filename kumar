import tkinter as tk
import itertools
import random

def gambling():
    gambling_options = ['♦', '♥', '♠', '♣', '∆']
    balance = 0

    def set_balance():
        nonlocal balance
        balance = int(balance_entry.get())
        balance_label.config(text="Bakiye: {}".format(balance))

    def check_choice():
        nonlocal balance
        bet_amount = int(bet_entry.get())
        if bet_amount <= balance:
            player_choice = choice.get()
            if player_choice in gambling_options:
                combination = itertools.product(gambling_options, repeat=3)
                result_combination = random.choice(list(combination))
                result_label.config(text="┌─────────┐\n│ {} {} {} │\n└─────────┘".format(result_combination[0], result_combination[1], result_combination[2]))
                if player_choice == ''.join(result_combination):
                    result_var.set("KAZANDİN!")
                    balance += bet_amount  # Kazanma durumunda bahis miktarı kadar bakiyeyi arttır
                elif player_choice in result_combination:
                    result_var.set("Yarı kazandınız.")
                    balance += bet_amount // 2  # Yarı kazanma durumunda bahis miktarının yarısı kadar bakiyeyi arttır
                else:
                    result_var.set("KASA KAZANDİ!")
                    balance -= bet_amount  # Kaybetme durumunda bahis miktarı kadar bakiyeyi azalt
                balance_label.config(text="Bakiye: {}".format(balance))  # Bakiyeyi güncelle
            else:
                result_var.set("Geçersiz giriş. Lütfen listeden bir sembol seçin.")
        else:
            result_var.set("Yetersiz bakiye.")

    root = tk.Tk()
    root.title("Kumar Oyunu")

    balance_label = tk.Label(root, text="Bakiye: {}".format(balance))
    balance_label.pack()

    balance_amount = tk.StringVar()
    tk.Label(root, text="Bakiye miktarı:").pack()
    balance_entry = tk.Entry(root, textvariable=balance_amount)
    balance_entry.pack()
    tk.Button(root, text="Bakiyeyi Ayarla", command=set_balance).pack()

    bet_amount = tk.StringVar()
    tk.Label(root, text="Bahis miktarı:").pack()
    bet_entry = tk.Entry(root, textvariable=bet_amount)
    bet_entry.pack()
    tk.Button(root, text="Bahis Yap", command=check_choice).pack()

    choice = tk.StringVar()
    tk.Label(root, text="Lütfen sembol seçin:").pack()
    for option in gambling_options:
        tk.Radiobutton(root, text=option, variable=choice, value=option).pack(anchor=tk.W)

    result_label = tk.Label(root, text="")
    result_label.pack()

    result_var = tk.StringVar()
    result_message = tk.Label(root, textvariable=result_var, fg="blue")
    result_message.pack()

    root.mainloop()

gambling()
